<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginTop="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">

        <ImageView
            android:id="@+id/business_photo"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/businessName"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/business_photo"
            android:fontFamily="@font/roboto"
            android:text="Cypress Street Pint and Plate"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <RatingBar
            android:id="@+id/business_rating"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/businessName"
            android:isIndicator="true"
            android:numStars="5"
            android:rating="4.5" />

        <TextView
            android:id="@+id/business_link_review"
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:layout_below="@id/businessName"
            android:layout_marginBottom="24dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/business_rating"
            android:text="See all reviews"
            android:textAlignment="viewStart"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/business_distance"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/businessName"
            android:layout_marginBottom="24dp"
            android:text=""
            android:textAlignment="viewStart"
            android:textSize="11sp" />




        <TextView
            android:id="@+id/business_tag"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@id/business_rating"
            android:text="Restaurant"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/business_price"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@id/business_rating"
            android:layout_toEndOf="@+id/business_tag"
            android:layout_marginStart="20dp"
            android:text="$$"
            android:textSize="11sp" />

        <RatingBar
            android:id="@+id/business_personal_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/business_price"
            android:layout_centerInParent="true"
            android:numStars="5"
            android:rating="0"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:visibility="visible" />

        <TextView
            android:id="@+id/business_phone"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/business_personal_rating"
            android:textAlignment="center"
            android:text="Call 4706011408"
            android:textSize="15sp"
            android:gravity="center_vertical" />

        <fragment
            android:id="@+id/mapView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentStart="true"
            android:layout_alignWithParentIfMissing="false"
            android:layout_below="@+id/business_phone"
            android:textAlignment="textStart"
            android:name="com.google.android.gms.maps.SupportMapFragment"/>

        <TextView
            android:id="@+id/business_address"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/mapView" />

        <EditText
            android:id="@+id/business_personal_review"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/business_address"
            android:layout_marginTop="20dp"
            android:textSize="11sp"
            android:layout_marginBottom="20dp"/>

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/business_personal_review"
            android:textSize="15sp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="Submit"/>


    </RelativeLayout>


</ScrollView>